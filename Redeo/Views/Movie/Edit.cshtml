@model MovieVM
@using Redeo.ViewModels;

@{
    ViewData["Title"] = "Edit Movie";
}
<div class="p-0 sm:p-12">
    <div class="mx-auto max-w-md px-6 py-12 bg-[#1b1b1f] border-0 shadow-lg sm:rounded-3xl">
        <h1 class="text-2xl font-bold mb-8 text-slate-300">Update Movie</h1>
        <form asp-action="Edit" method="post">

            <div class="relative z-0 w-full mb-5">
                <input asp-for="Name"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Name" class="absolute duration-300 top-3 -z-1 origin-0 text-slate-300">Name</label>
                <span asp-validation-for="Name" class="text-sm text-red-600"></span>
            </div>


            <div class="relative z-0 w-full mb-5">
                <input asp-for="Description"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Description" class="absolute duration-300 top-3 -z-1 origin-0 text-slate-300">Description</label>
                <span asp-validation-for="Description" class="text-sm text-red-600"></span>
            </div>


            <div class="relative z-0 w-full mb-5">
                <input asp-for="DateOfRelease"
                       type="date"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="DateOfRelease" class="absolute duration-300 top-3 -z-1 origin-0 text-slate-300"> Date of release</label>
                <span asp-validation-for="DateOfRelease" class="text-sm text-red-600"></span>
            </div>

            <div class="relative z-0 w-full mb-5">
                <label asp-for="CategoryIds" class="absolute duration-300 top-3 -z-1 origin-0 text-slate-300"> Category</label>
                <select asp-for="CategoryIds" class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" asp-items="ViewBag.Categories" multiple></select>

                <span asp-validation-for="CategoryIds" class="text-sm text-red-600"></span>

            </div>

            <div class="flex justify-between">
                <a asp-action="Index"
                   class="hvr-icon-back px-4 py-2.5 mt-3 text-md text-white transition-all duration-150 ease-linear rounded-lg shadow outline-none bg-gray-500 hover:bg-gray-700 hover:shadow-lg focus:outline-none">
                    <i class="fa-solid fa-angle-left hvr-icon mr-2"></i>
                    Back to list
                </a>

                <button type="submit"
                        class=" px-4 py-2.5 mt-3 text-md text-white transition-all duration-150 ease-linear rounded-lg shadow outline-none bg-blue-500 hover:bg-blue-700 hover:shadow-lg focus:outline-none">
                    Update
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
