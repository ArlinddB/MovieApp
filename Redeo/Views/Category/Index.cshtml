@model IEnumerable<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container max-w-2xl mx-auto px-4 sm:px-8">
    <div class="py-8 -mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto">
        <div class="pt-2 pb-6">
            
           <a class="inline-block px-4 py-2.5 bg-[#006db0] text-white font-medium text-sm leading-tight rounded shadow-md hover:bg-[#0067a5] hover:shadow-lg focus:bg-[#0067a5] focus:shadow-lg focus:outline-none focus:ring-0 active:bg-[#0067a5] active:shadow-lg transition duration-150 ease-in-out" asp-action="Create">Add new category</a>
        <form asp-action="Index" method="get">
            <div class="form-actions no-color">
                <p>
                    <input type="text" name="SearchString" value="@ViewData["CurrentFilter"]" />
                    <input type="submit" value="" class="btn" /> 
                    <a asp-action="Index" class="text-slate-300">Clear</a>
                </p>
            </div>
        </form>
       </div>
        <div class="inline-block min-w-full shadow-md rounded-lg overflow-hidden">
            <table class="min-w-full leading-normal">
                <thead>
                    <tr>
                        <th class="px-5 py-3 border-b-2 border-gray-600 bg-[#19191c]  text-left text-xs font-semibold text-gray-300 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-600 bg-[#19191c]  text-left text-xs font-semibold text-gray-300 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-600 bg-[#19191c]  text-left text-xs font-semibold text-gray-300 uppercase tracking-wider">
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="px-5 py-5 border-t border-gray-600 bg-[#1b1b1f] text-gray-300 text-sm break-all">
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td class="px-5 py-5 border-t border-gray-600 bg-[#1b1b1f]  text-gray-300 text-sm break-all">
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td class="px-5 py-5 border-t border-gray-600 bg-[#1b1b1f] text-sm">
                                <a class="inline-block px-4 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" asp-action="Edit" asp-route-id="@item.Id"><i class="fa-solid fa-pen mr-2"></i>Edit</a>
                                <a class="inline-block px-4 py-2.5 bg-red-600 text-white font-medium text-xs leading-tight rounded shadow-md hover:bg-red-700 hover:shadow-lg focus:bg-red-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-red-800 active:shadow-lg my-1 transition duration-150 ease-in-out" asp-action="Delete" asp-route-id="@item.Id"><i class="fa-solid fa-trash mr-2"></i>Delete</a>
                                <a class="inline-block px-4 py-[8px] border-2 border-blue-600 text-white font-medium text-xs leading-tight rounded hover:bg-blue-700 hover:text-white focus:outline-none focus:ring-0 transition duration-150 ease-in-out" asp-action="Details" asp-route-id="@item.Id"><i class="fa-solid fa-eye mr-2"></i>Details</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <partial name="_Pagination" />
</div>