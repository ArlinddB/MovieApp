@model Redeo.Models.SliderContent

@{
    ViewData["Title"] = "Create";
}

<div class="p-0 sm:p-12">
    <div class="mx-auto max-w-md px-6 py-12 bg-[#19191c] border-0 shadow-lg sm:rounded-3xl">
        <h1 class="text-2xl font-bold mb-8 text-gray-300">Add a new category</h1>
        <form asp-action="Create">
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Name"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Name" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Name</label>
                <span asp-validation-for="Name" id="errStatus" class="text-sm text-red-600"></span>
            </div>
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Duration"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Duration" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Duration</label>
                <span asp-validation-for="Duration" id="errStatus" class="text-sm text-red-600"></span>
            </div>
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Description"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Description" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Description</label>
                <span asp-validation-for="Description" id="errStatus" class="text-sm text-red-600"></span>
            </div>
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Quality"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Quality" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Quality</label>
                <span asp-validation-for="Quality" id="errStatus" class="text-sm text-red-600"></span>
            </div>
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Picture"
                       type="text"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Picture" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Picture</label>
                <span asp-validation-for="Picture" id="errStatus" class="text-sm text-red-600"></span>
            </div>

                <button type="submit"
                        id="submitBtn"
                        class="px-6 py-3 mt-3 text-md text-white transition-all duration-150 ease-linear rounded-lg shadow outline-none bg-blue-500 hover:bg-blue-600 hover:shadow-lg focus:outline-none">
                    Add 
                </button>
        </form>
    </div>
</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}