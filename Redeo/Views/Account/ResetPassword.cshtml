@model Redeo.ViewModels.ResetPasswordVM;

@{
    ViewData["Title"] = "Reset Password";
}

<div class="p-0 sm:p-12">
    <div class="mx-auto max-w-md px-6 py-12 bg-[#19191c] border-0 shadow-lg sm:rounded-3xl">
        <h1 class="text-2xl font-bold mb-8 text-gray-300">Reset Password</h1>
        <form asp-action="ResetPassword" method="post">
            <div class="relative z-0 w-full mb-5">
                <input asp-for="Password"
                       type="password"
                       id="password"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="Password" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Password</label>
                <i class="fa-sharp fa-solid fa-eye-slash text-zinc-300 cursor-pointer absolute right-0 bottom-4" id="togglePassword"></i>
                <span asp-validation-for="Password" id="errStatus" class="text-sm text-red-600"></span>
            </div>

            <div class="relative z-0 w-full mb-5">
                <input asp-for="ConfirmPassword"
                       type="password"
                       id="confPassword"
                       placeholder=" "
                       class="pt-3 pb-2 block w-full px-0 mt-0 bg-transparent border-0 border-b-2 appearance-none focus:outline-none focus:ring-0 focus:border-blue-400 border-gray-200 text-slate-300" />
                <label asp-for="ConfirmPassword" class="absolute duration-300 top-3 -z-1 origin-0 text-gray-500">Confirm Password</label>
                <span asp-validation-for="ConfirmPassword" id="errStatus" class="text-sm text-red-600"></span>
            </div>

            <input type="hidden" asp-for="Email" class="form-control" />
            <input type="hidden" asp-for="Token" class="form-control" />

            <button type="submit"
                    class="px-6 py-3 mt-3 text-md text-white transition-all duration-150 ease-linear rounded-lg shadow outline-none bg-blue-500 hover:bg-blue-600 hover:shadow-lg focus:outline-none">
                Submit
            </button>
        </form>
    </div>
</div>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}